<%= render "shared/nav" %>

<h1>Billing Addresses</h1>

<% if @billing_addresses.present? %>
  <table class="table table-hover table-striped">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email Address</th>
        <th scope="col">Phone Number</th>
        <th scope="col">Street Address</th>
        <th scope="col">City</th>
        <th scope="col">State</th>
        <th scope="col">Zip</th>
      </tr>
    </thead>
    <tbody>
      <% @billing_addresses.each do |billing_address| %>
        <tr>
          <td><%= billing_address&.name %></td>
          <td><%= billing_address&.email_address %></td>
          <td><%= number_to_phone(billing_address&.phone_number) %></td>
          <td><%= billing_address&.street_address %></td>
          <td><%= billing_address&.city %></td>
          <td><%= billing_address&.state %></td>
          <td><%= billing_address&.zip %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% elsif %>
  There are no saved Billing Addresses
<% end %>
